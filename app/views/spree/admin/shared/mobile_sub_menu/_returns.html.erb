<ul class="list-unstyled position-absolute mobile-navigation-sublist" data-category="<%= category.parameterize %>">
  <li class="text-center font-weight-bold mobile-navigation-sublist-header">
    <%= category %>
  </li>
  <% if can? :admin, Spree::ReturnAuthorization %>
	  <li class="d-flex justify-content-between align-items-center mobile-navigation-list-item">
  		<%= link_to Spree.t(:return_authorizations, scope: [:admin, :tab]), spree.admin_return_authorizations_path, class: 'w-100' %>
  	</li>
  <% end %>
  <% if can? :admin, Spree::CustomerReturn %>  
	  <li class="d-flex justify-content-between align-items-center mobile-navigation-list-item">
  		<%= link_to Spree.t(:customer_returns, scope: [:admin, :tab]), spree.admin_customer_returns_path, class: 'w-100' %>
  	</li>
  <% end %>
</ul>