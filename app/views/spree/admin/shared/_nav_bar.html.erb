<ul id="admin-nav-bar" class="nav align-items-center d-flex justify-content-end navbar-right">
  <% if content_for?(:table_filter)%>
    <li>
      <div class="navbar-right-search-menu">
        <button type="button" class="navbar-right-dropdown-toggle search-icons" aria-label="<%= Spree.t('nav_bar.show_search')%>">
          <%= icon(name: 'magnifying-glass',
                   classes: 'd-none d-md-inline-block',
                   width: 36,
                   height: 36) %>

          <%= icon(name: 'magnifying-glass',
                   classes: 'd-md-none',
                   width: 24,
                   height: 24) %>
        </button>

        <div id="admin-search-dropdown" class="p-0 w-100 shadow navbar-right-search-menu-dropdown hide-on-esc">
          <%= render partial: 'spree/admin/shared/nav_bar_filter' %>
        </div>
      </div>
    </li>
  <% end %>

  <% if content_for?(:sidebar)%>
    <li>
      <div class="d-md-none navbar-right-dropdown">
        <button class="sidebar-toggler navbar-right-dropdown-toggle" type="button" data-toggle="collapse" data-target="#mobile-sidebar" aria-label="<%= Spree.t('nav_bar.show_menu') %>">
          <%= icon(name: 'spree_backendx/cog-2',
                  width: 29,
                  height: 29)  %>
        </button>
      </div>
      <div class="d-none d-md-flex navbar-right-dropdown">
        <button id="content-sidebar" class="navbar-right-dropdown-toggle" type="button" aria-label="<%= Spree.t('nav_bar.show_menu') %>">
          <%= icon(name: 'spree_backendx/cog-2',
                  width: 38,
                  height: 38)  %>
        </button>
      </div>
      <%= render partial: "spree/admin/shared/mobile_sidebar" %>
    </li>
  <% end %>

  <% if try_spree_current_user %>
    <li>
      <div class="dropdown navbar-right-dropdown">
        <button id="store-button" type="button" data-toggle="dropdown" class="navbar-right-dropdown-toggle" aria-label="<%= Spree.t('nav_bar.show_user_menu')%>">
          <%= icon(name: 'person',
                  classes: 'd-none d-md-inline-block',
                  width: 36,
                  height: 36) %>
          <%= icon(name: 'person',
                  classes: 'd-md-none',
                  width: 27,
                  height: 27) %>
          <span class="d-none d-xl-inline-block">
            <%= try_spree_current_user.email %>
          </span>
        </button>

        <div>
          <%= render partial: "spree/admin/shared/account_nav" %>
        </div>
      </div>
    </li>
  <% end %>
</ul>